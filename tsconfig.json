{
	"compilerOptions": {
		"module": "commonjs",
		"target": "es6",
		"outDir": "./dist",
		"declaration": true,
		"lib": [
			"es6", "dom"
		],
		"types": [
			// add node as an option
			"node",
			"mocha",
			"reflect-metadata"
		],
		"sourceMap": true,
		"rootDir": "./src",
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true
	},
	"exclude": [
		"node_modules",
		"dist"
	]
}
